<h1>Add dose</h1>
<hr>
<%= form_for [@cocktail, @dose] do |f| %>


  <% if @dose.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @dose.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.select :ingredient_id, @ingredients.collect {|i| [ i.name, i.id ] } %>
  <%= f.submit "submit" %>
<% end %>
<hr>
